<Page x:Class="TaskSchedule.Presentation.Pages.NewBoard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskSchedule.Presentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewBoard">

    <Grid>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Margin="440,144,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="161"/>
        <TextBox x:Name="descriptionTextBox" HorizontalAlignment="Left" Margin="440,188,0,0" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top" Width="161"/>
        <Button x:Name="button" Content="Create new" HorizontalAlignment="Left" Margin="440,238,0,0" VerticalAlignment="Top" Width="161" Click="button_Click"/>
        <Button x:Name="buttonBoardsNav" Content="Boards" HorizontalAlignment="Left" Margin="40,39,0,0" VerticalAlignment="Top" Width="68" Click="buttonBoards_Click"/>
        <Button x:Name="buttonMyTasksNav" Content="My Tasks" HorizontalAlignment="Left" Margin="108,39,0,0" VerticalAlignment="Top" Width="68" Click="buttonMyTasks_Click"/>

    </Grid>
</Page>

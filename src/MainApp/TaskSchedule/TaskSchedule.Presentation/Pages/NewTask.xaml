<Page x:Class="TaskSchedule.Presentation.Pages.NewTask"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskSchedule.Presentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewTask">

    <Grid>
        <TextBox x:Name="descriptionTextBox" HorizontalAlignment="Left" Margin="298,151,0,0" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top" Width="161"/>
        <Button x:Name="createUserButton" Content="Create" HorizontalAlignment="Left" Margin="298,239,0,0" VerticalAlignment="Top" Width="161" Click="createTaskButton_Click"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Margin="298,110,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="161"/>
        <DatePicker x:Name="datePicker" HorizontalAlignment="Left" Margin="298,190,0,0" VerticalAlignment="Top" Width="189"/>

    </Grid>
</Page>
